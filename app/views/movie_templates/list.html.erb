<h1> Lsit of all movies</h1>

<table border="1">
  <tr> 
    <th> ID </th>
    <th> Image </th>
    <th> Title </th>
    <th> Year </th>
    <th> Director </th>
    <th> </th> 
  </tr>

  <% Movie.all.each do |a_movie|%>
    <tr>
      <td> <%= a_movie.id %></td>
      <td> 
        <img src="<%= a_movie.image %>" width="50">
      </td>
      <td> <%= a_movie.title %></td>
      <td> <%= a_movie.year %></td>
      <td>
       
        <% dif_name = Director.where({ :id => a_movie.director_id}) %>
        <% dif_name = dif_name.first %>
        <%= dif_name.name %>
      </td>
      <td> 
        <a href="/movies/<%= a_movie.id%>"> 
        Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
